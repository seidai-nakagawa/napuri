.contents-row
  .TweetList
    .TweetList__date
      .date_time
        .date_time__y
          = @tweet.created_at.strftime('%Y年')
          %br
        .date_time__m
          - require 'date'
          - dw = ["日", "月", "火", "水", "木", "金", "土"]
          = @tweet.created_at.strftime("%m月%d日(%a)")

      .choice
        %ul.choice_lists
          %li
            = link_to '▶︎ Details', tweet_path(@tweet.id), method: :get ,class: "choice_list"
          - if user_signed_in? && current_user.id == @tweet.user_id
            %li
              = link_to '▶︎ Edit', edit_tweet_path(@tweet.id), method: :get ,class: "choice_list"
            %li
              = link_to '▶︎ Delete', tweet_path(@tweet.id), method: :delete ,class: "choice_list"

    .TweetList__title
      題 名
      .text__box
        = link_to edit_tweet_path(@tweet.id), method: :get do
          = @tweet.title

    .TweetList__text
      日 記
      .text__box
        %p
          = simple_format(@tweet.text)

    .TweetList__image
      画 像
      .image__box
        .image__list
          = link_to edit_tweet_path(@tweet.id), method: :get do
            %figure.js-img
              - @tweet.images.each do |i|
                = image_tag i.url.url margin:"15px"

    .TweetList__video
      動 画
      .video__box
        = link_to @tweet.video_url.to_s do
          .video__box__url
            = video_tag @tweet.video_url.to_s,width: "75%", height: "340px", controls: true, autobuffer: true
  
    .container
      - if current_user
        = form_with(model: [@tweet, @comment], local: true) do |form|
          = form.text_area :text, placeholder: "コメントする", rows: "2"
          = form.submit "SEND"
      - else
        %strong
          %p ※※※ コメントの投稿には新規登録/ログインが必要です ※※※
      .like_button
        - if current_user.likes.find_by(tweet_id: @tweet.id)
          = link_to tweet_like_path(@tweet), method: :delete do
            %span.fa.fa-heart.like-btn いいね
        - else
          = link_to tweet_likes_path(@tweet), method: :post do
            %span.fa.fa-heart.like-btn-unlike いいね
      .comments
        %h4 ＜コメント一覧＞
        - if @comments
          - @comments.each do |comment|
            %p
              %strong
                = link_to comment.user.nickname, "/users/#{comment.user_id}"
                ：
              = comment.text

    .TweetList__name
      %span.name
        %a{:href => "/users/#{@tweet.user.id}"}
          作者：
          = @tweet.user.nickname