.contents-row
  .container
    = form_with(model: @tweet, local: true) do |form|
      %h3 Edit
      %h2
        Images
      #diary-image
        #previews
          - @images.each_with_index do |img, i|
          
            -if img.persisted?
              #parent{data: {index: i}}
                = image_tag img.url.url, class:"js-img", id: "js-img_#{i}"
                .js-remove{"data-index": "#{i}", id: "remove_#{i}"} 削除

        .diary-image__box#image-box__container
          =form.fields_for :images do |i|
            .diary-image__box__input{"data-index": "#{i.index}"}
              = i.file_field :image, name: "tweet[images_attributes][#{i.index}][url]",class:"js-file", id:"tweet_images_attributes_#{i.index}_url"
              = i.check_box :_destroy ,"data-index": "#{i.index}",class:"hidden-destroy"
              %label{for: "img-file"}
          %i.fa.fa-camera-retro
          %p.diary-image__box__text
            クリックしてファイルをアップロード
              
      %h2
        Video
        = form.file_field :'video'
      %h2
        Title
        = form.text_field :title,  rows: "1"
      %h2
        Diary
        = form.text_area :text, placeholder: "投稿内容", rows: "10"
        = form.submit '投    稿'
